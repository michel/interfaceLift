<!DOCTYPE html PUBLIC "-//W3C//DTD XHTML 1.0 Strict//EN" "http://www.w3.org/TR/xhtml1/DTD/xhtml1-strict.dtd">
<html xmlns="http://www.w3.org/1999/xhtml" lang="en">
<head>
  <%= render :partial => "layouts/head" %>
</head>
<body>
  <div id="container">
    <div id="header">
      <h1></h1>
      <div id="user-navigation">
        <ul>
          <li><a href="#">Profile</a></li>
          <li><a href="#">Settings</a></li>
          <li><a href="/logout" class="logout">Logout</a></li>
        </ul>
        <div class="clear"></div>
      </div>
      <%= render :partial => "layouts/menu" %>
    </div>    
    <div id="wrapper">
      <div class="flash">
        <% flash.each do |type, message| -%>
          <div class="message <%= type %>">
            <p><%= message %></p>
          </div>
        <% end -%>
      </div>
      <div id="main">
        <div class="block">
          <%= yield(:submenu) %>
          <div class="content">
            <div class="inner">
              <%= yield %>
            </div>
          </div>
        </div>
        
        <div class="clear"></div>
        <div id="footer">
          <div class="block">
            <p>Copyright &copy; 2009 Kabisa.nl</p>
          </div>      
        </div>
      </div>
      <div id="sidebar">
        <%= yield :sidebar %>
      </div>
      <div class="clear"></div>      
    </div>    
  </div>
</body>
</html>
